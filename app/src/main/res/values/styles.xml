<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">?colorPrimaryDark</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">?android:attr/textColor</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:colorBackground">?android:attr/colorPrimaryDark</item>
        <item name="background">@drawable/dialog_rounded_corners</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="SnackBarButtonStyle" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">@dimen/stroke</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialogStyle</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialogStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corners_radius</item>
        <item name="cornerSizeTopLeft">@dimen/corners_radius</item>
    </style>
    
    <style name="ExtendedFABStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="rippleColor">@null</item>
        <item name="android:backgroundTint">?colorPrimaryDark</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">@dimen/stroke</item>
        <item name="strokeColor">@android:color/white</item>
        <!--  Remove the shadow  -->
        <item name="elevation">0dp</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.Material3.ActionMode">
        <item name="background">?colorPrimary</item>
        <item name="height">?android:attr/actionBarSize</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>